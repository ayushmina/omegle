<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Anonymous Video Chat - Connect with Strangers</title>
  <link href="/css/style.css" rel="stylesheet">
  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-20px); }
    }
    @keyframes gradient {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    .floating { animation: float 6s ease-in-out infinite; }
    .gradient-bg { 
      background: linear-gradient(-45deg, #667eea, #764ba2, #f093fb, #f5576c);
      background-size: 400% 400%;
      animation: gradient 15s ease infinite;
    }
  </style>
</head>

<body class="min-h-screen gradient-bg flex items-center justify-center p-4">
  <div class="bg-white/90 backdrop-blur-lg rounded-2xl shadow-2xl w-full max-w-lg p-8 text-center">
    <!-- Logo/Icon -->
    <div class="floating mb-6">
      <div class="mx-auto w-20 h-20 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center text-white text-3xl font-bold shadow-lg">
        💬
      </div>
    </div>
    
    <!-- Main Heading -->
    <h1 class="text-4xl font-bold text-gray-800 mb-4">
      Connect <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-600 to-pink-600">Instantly</span>
    </h1>
    
    <!-- Subtitle -->
    <p class="text-lg text-gray-600 mb-6 leading-relaxed">
      Start anonymous video chats with strangers from around the world. 
      <br>No registration required.
    </p>
    
    <!-- CTA Button -->
    <div class="mb-8">
      <a href="/chat" class="inline-flex items-center justify-center w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-4 px-8 rounded-lg text-lg shadow-md hover:shadow-lg transform hover:scale-102 transition-all duration-200 border border-blue-700">
        <span class="mr-2">🚀</span>
        Start Video Chat
      </a>
    </div>
    
    <!-- Features Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-8">
      <div class="bg-gradient-to-r from-blue-50 to-blue-100 p-4 rounded-xl">
        <div class="text-blue-500 text-2xl mb-2">🎥</div>
        <h3 class="font-semibold text-gray-800">Video Chat</h3>
        <p class="text-sm text-gray-600">Face-to-face conversations</p>
      </div>
      <div class="bg-gradient-to-r from-green-50 to-green-100 p-4 rounded-xl">
        <div class="text-green-500 text-2xl mb-2">💬</div>
        <h3 class="font-semibold text-gray-800">Text Chat</h3>
        <p class="text-sm text-gray-600">Instant messaging</p>
      </div>
      <div class="bg-gradient-to-r from-purple-50 to-purple-100 p-4 rounded-xl">
        <div class="text-purple-500 text-2xl mb-2">🔒</div>
        <h3 class="font-semibold text-gray-800">Anonymous</h3>
        <p class="text-sm text-gray-600">Complete privacy</p>
      </div>
      <div class="bg-gradient-to-r from-orange-50 to-orange-100 p-4 rounded-xl">
        <div class="text-orange-500 text-2xl mb-2">⚡</div>
        <h3 class="font-semibold text-gray-800">Instant</h3>
        <p class="text-sm text-gray-600">Connect immediately</p>
      </div>
    </div>
    
    <!-- Stats -->
    <div class="mt-8 flex justify-center items-center space-x-6 text-sm text-gray-500">
      <div class="flex items-center">
        <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
        <span id="user-count">Loading...</span> online
      </div>
      <div>🌍 Worldwide</div>
      <div>🔐 Secure</div>
    </div>
    
    <!-- Disclaimer -->
    <div class="mt-6 text-xs text-gray-400 leading-relaxed">
      By using this service, you agree to be respectful and follow community guidelines. 
      This platform is for users 18+ only.
    </div>
  </div>

  <script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
  <script>
    // Get user count for landing page
    const socket = io();
    socket.on("userCount", function(count) {
      document.getElementById("user-count").textContent = count + " users";
    });
    
    // Disconnect after getting count (we're just on landing page)
    setTimeout(() => {
      socket.disconnect();
    }, 2000);
  </script>
</body>

</html>