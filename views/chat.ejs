<body>
    <%- include('partials/header') %>

    <!-- Video Call Interface -->
    <div class="modal hidden" id="video-modal">
        <div id="videos">
            <video class="video-player" id="localVideo" autoplay muted playsinline></video>
            <video class="video-player" id="remoteVideo" autoplay playsinline></video>
        </div>

        <div id="video-controls">
            <button class="video-control-btn camera" id="cameraButton" title="Toggle Camera">üì∑</button>
            <button class="video-control-btn mic" id="micButton" title="Toggle Microphone">üé§</button>
